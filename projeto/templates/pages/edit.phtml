{% extends "layouts/admin.phtml" %}

{% block content %}
<h3>Editar usuario: {{ page.title }}</h3>
<form class="form" action="/admin/pages/edit/{{ page.id }}" method="post" accept-charset="utf-8">	
	<p><input type="text" name="title" value="{{ page.title }}"></p>
	<p><textarea name="body">{{ page.body }}</textarea></p>	
	<input type="submit" value="Salvar" >
</form>
{% endblock %}